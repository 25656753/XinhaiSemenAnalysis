<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <include
        android:id="@+id/layoutTop"
        layout="@layout/layout_top_navigate_theme" />

    <LinearLayout 
        android:id="@+id/layoutTestButtons"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        >
        <Button 
            android:id="@+id/btnTest1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textColor="@color/white"
        	android:background="@drawable/common_button_selector_blue"
        	android:textSize="14dp"
        	android:text="@string/test_1"
            />
        <Button 
            android:id="@+id/btnTest2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/white"
        	android:background="@drawable/common_button_selector_blue"
        	android:textSize="14dp"
        	android:text="@string/test_2"
            />
        <Button 
            android:id="@+id/btnTest3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/white"
        	android:background="@drawable/common_button_selector_blue"
        	android:textSize="14dp"
        	android:text="@string/test_3"
            />
    </LinearLayout>

    <Button 
        android:id="@+id/btnSend"
        android:layout_alignParentRight="true"
        android:layout_above="@id/layoutTestButtons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:text="@string/device_opt_com_data_send"
        android:textColor="@color/white"
        android:background="@drawable/common_button_selector_blue"
        android:textSize="16dp"
        android:singleLine="true"
        />
    
    <EditText 
        android:id="@+id/editInput"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@id/btnSend"
        android:layout_alignTop="@id/btnSend"
        android:layout_alignBottom="@id/btnSend"
        android:layout_marginLeft="10dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textSize="14dp"
        android:textColor="@color/demo_title"
        android:singleLine="true"
        android:background="@drawable/common_editor_bg"
        />
    
    <View 
        android:id="@+id/divLine"
        android:layout_above="@id/editInput"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:background="@color/bg_gray"
        />
    <ListView 
        android:id="@+id/listCommands"
        android:layout_below="@id/layoutTop"
        android:layout_above="@id/divLine"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:listSelector="@null"
        android:stackFromBottom="true"
        >
        
    </ListView>
</RelativeLayout>