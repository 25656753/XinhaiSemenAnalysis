<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <shape>
            <gradient android:startColor="#ff85141d"
                android:endColor="#ff85141d"
                android:angle="270"
                />
            <stroke android:width="0dp" 
                    android:color="#00000000"  />
            <corners 
                android:radius="0dp"
                />   
            <padding android:left="0dp" 
                     android:top="0dp"
                     android:bottom="0dp" 
                     android:right="0dp"/>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <gradient android:startColor="#ff85141d"
                android:endColor="#ff85141d"
                android:angle="270"
                />
            <stroke android:width="0dp" 
                    android:color="#00000000"  />
            <corners 
                android:radius="0dp"
                />   
            <padding android:left="0dp" 
                     android:top="0dp"
                     android:bottom="0dp" 
                     android:right="0dp"/>
        </shape>
    </item>
    <item >
        <shape>
            <gradient android:startColor="#ffda202e"
                android:endColor="#ffda202e"/>
            <stroke android:width="0dp" 
                    android:color="#00000000"  />
            <corners 
                android:radius="0dp"
                />   
            <padding android:left="0dp" 
                     android:top="0dp"
                     android:bottom="0dp" 
                     android:right="0dp"/>
        </shape>
    </item>
</selector> 